
@{
    ViewBag.Title = "Multi";

}

<h2>批量录入</h2>
@* 日期控件相关引用资源 *@
<script src="~/Content/widget/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.js"></script>
<link href="~/Content/widget/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen" />
<script src="~/Content/widget/bootstrap-datetimepicker-master/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>

<script>
    $(document).ready(function () {

        //日期控件初始化
        $('#datetimepicker').datetimepicker({
            language: 'zh-CN',
            format: 'yyyy-mm-dd',
            autoclose: true,
            minView: 2,
            todayBtn: true,
            todayHighlight: true
        });
    })



</script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        航班：提交数量：@ViewBag.SubmitCount; 跳过数量：@ViewBag.SkipCount;
    </p>

    <div class="form-group">
  
        <div class="col-sm-12">
            <textarea name="List" class="form-control col-lg-6" rows="20" cols="70" placeholder=""></textarea>
        </div>

        <div>
            <input type="submit" value="预览" class="btn btn-info" name="action" />
            <input type="submit" value="提交" class="btn btn-success" name="action" />
        </div>

    </div>

        <div class="form-group">

            <table class="table">
                <tr>
                    <th>0航班日期</th>
                    <th>1星期</th>
                    <th>2性质</th>
                    <th>3航班号</th>
                    <th>4机型</th>
                    <th>5机号</th>
                    <th>6出港机位</th>                  
                    <th>7起飞</th>
                    <th>8计飞</th>
                    <th>9预飞</th>                
                    <th>10实飞</th>
                    <th>11实达</th>
                    <th>12预达</th>
                    <th>13计达</th>
                    <th>14到达</th>
                    <th>15进港机位</th>                   
                </tr>
                @if (ViewBag.Content != null)
                {
                    foreach (string item in ViewBag.Content)
                    {
                        if (!string.IsNullOrEmpty(item))
                        {
                            <tr>
                                @foreach (var t in item.Split('\t'))
                                {
                                    <td>@t.ToString()</td>
                                }


                            </tr>
                        }
                    }
                }
            </table>
        </div>

}

<div>
    @Html.ActionLink("返回", "MFIndex")
</div>

